#!/bin/bash

if ! [ -f /tmp/i2p_installed ]; then
  zenity --error --text="I2P has not been installed. Run 'installi2p' in a terminal to install it." --no-wrap
  exit 1
fi

bwrap \
--bind /home/user /home/user \
--ro-bind /usr/bin /usr/bin \
--ro-bind /usr/lib /usr/lib \
--ro-bind /usr/share /usr/share \
--symlink /usr/bin /bin \
--symlink /usr/bin /sbin \
--symlink /usr/lib /lib \
--symlink /usr/lib /lib64 \
--unshare-pid \
--proc /proc \
--unshare-cgroup \
--unshare-uts \
--cap-drop all \
--new-session \
--setenv SHELL /bin/false \
--tmpfs /tmp/ \
--dev /dev/ \
/home/user/i2p-browser/Browser/start-tor-browser
